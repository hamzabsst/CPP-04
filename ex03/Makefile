NAME	= Interface
CC		= c++
CFLAGS	= -Wall -Werror -Wextra -std=c++98

SRCS 	= 	main.cpp \
			src/AMateria.cpp \
			src/Ice.cpp \
			src/Cure.cpp \
			src/Character.cpp \
			src/MateriaSource.cpp

OBJS	= $(SRCS:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJS)
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.cpp
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
